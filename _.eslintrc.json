{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "eqeqeq": "warn",
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-unused-vars": "warn",
    "semi": [
      "error",
      "always"
    ],
    "complexity": [
      "warn"
    ],
    "no-constructor-return": [
      "warn"
    ],
    "no-else-return": [
      "warn",
      {
        "allowElseIf": true
      }
    ],
    "no-extra-bind": [
      "warn"
    ],
    "no-implicit-coercion": [
      "warn"
    ],
    "generator-star-spacing": [
      "warn"
    ],
    "no-useless-constructor": [
      "warn"
    ],
    "prefer-const": [
      "warn",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ]
  }
}